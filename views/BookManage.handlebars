  <style>
    .buttons button{
      margin:40px 20px;
      width: 240px;
    }
    .modal-body{
      text-align: center;
    }
    .modal-body input{
      margin-bottom: 10px;
    }
    ::-webkit-input-placeholder {
   text-align: center;
}
  </style>

  <div class="buttons" style="text-align:center; margin-top:30px">
  <button type="button" class="btn btn-info btn-lg" data-target="#AddBookModal" data-toggle="modal" id="AddBookModalButton">Add Book</button>
  <button type="button" class="btn btn-info btn-lg" data-target="#RemoveBookModal" data-toggle="modal" id="RemoveBookModalButton">Remove Book</button>
  </div>

  <div id="AddBookModal" class="modal fade" role="dialog">
	  <div class="modal-dialog">

	    <!-- Modal content-->
	    <div class="modal-content">
	      <div 	class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title" id="modal_title">Add Book(s)</h4>
	      </div>
	      <div class="modal-body">
	         <!--input name="bname" id="bname" placeholder="Name of Book"-->
           <select onchange="if(this.value === 'New Book') document.getElementById('bname').disabled = false; else document.getElementById('bname').disabled = true; " id="book_select">
             <option><b>New Book<b></option>
             {{#each allBooks}}
              <option>{{bname}}</option>
             {{/each}}
           </select>
           <br>
           <input name="bname" id="bname" placeholder="Name of Book"><br>
           <input name="num" id="num" placeholder="Number of book(s)"><br>
           <button name="AddBookButton" class="btn" style="background:#3b5998; color:white; font-weight:bold" id="AddBookButton">Add Book(s)</button>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default btn2" data-dismiss="modal">Close</button>
	      </div>
	    </div>
    </div>
  </div>

  <div id="RemoveBookModal" class="modal fade" role="dialog">
	  <div class="modal-dialog">

	    <!-- Modal content-->
	    <div class="modal-content">
	      <div 	class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title" id="modal_title">Remove Book</h4>
	      </div>
	      <div class="modal-body">
	         <input name="bid" id="bid" placeholder="Book ID"><br>
           <button name="RemoveBookButton" class="btn" style="background:#3b5998; color:white; font-weight:bold" id="RemoveBookButton" onclick="AddBook()">Remove Book</button>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default btn2" data-dismiss="modal">Close</button>
	      </div>
	    </div>
    </div>
  </div>





  <script type="text/javascript" src="/LIB/jquery/jquery.js"></script>
	<script type="text/javascript" src="/LIB/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/script/BookManage.js"></script>
